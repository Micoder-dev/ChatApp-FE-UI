<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_image"/>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neumorph_receiver_text_card"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="23dp"
        android:layout_toEndOf="@+id/message_profile_image"
        app:neumorph_shapeType="pressed"
        app:neumorph_shadowColorLight="#FDE0EA">
    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/receiver_messages_layout"
        android:text="receiver messages"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxWidth="220dp"/>
    </soup.neumorphism.NeumorphCardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:elevation="10dp">
    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:elevation="10dp">
    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/message_sender_file_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/message_receiver_file_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neumorph_sender_text_card"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="23dp"
        android:layout_alignParentEnd="true"
        app:neumorph_shapeType="pressed"
        app:neumorph_shadowColorLight="#DAF5F8">
    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sender_messages_layout"
        android:text="sender messages"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:maxWidth="240dp"/>
    </soup.neumorphism.NeumorphCardView>

</RelativeLayout>